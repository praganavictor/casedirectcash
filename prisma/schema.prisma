generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventType {
  payment
  upsell
}

model Event {
  id        String    @id @default(uuid())
  type      EventType
  name      String
  email     String
  value     Decimal   @db.Decimal(10, 2)
  timestamp DateTime  @default(now())

  @@index([timestamp])
  @@map("events")
}
